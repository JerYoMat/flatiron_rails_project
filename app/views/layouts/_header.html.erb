<!--Bootstrap header that displays different options depending on whether a user is logged in or not.  -->
<header class="navbar navbar-fixed-top">
  <div class="container" id="header">
    <%= link_to "// learnHELP", root_path, id: "logo" %>
    <nav>
        <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to "Home", root_path %></li>
        <li class="nav-item"><%= link_to "Lessons", lessons_path %></li>
        <% if logged_in? %>
          <li class="nav-item"><%= link_to "Users", users_path %></li>
          <li class="dropdown nav-item">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="nav-item" ><%= link_to "Profile", current_user %></li>
              <li class="nav-item"><%= link_to "Edit My Profile", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li class="nav-item">
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to "Sign Up", signup_path %></li>
          <li class="nav-item"><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
