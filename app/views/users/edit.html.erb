<% provide(:button_text, 'Save changes') %>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener noreferrer">Change</a>
    </div>
  </div>
</div>

<!-- rel of the link is to protect from phishing when handing over the window object to the linked site. -->

<!-- When constructing a form using form_for(@user), Rails uses POST if @user.new_record? is true and PATCH if it is false. -- >